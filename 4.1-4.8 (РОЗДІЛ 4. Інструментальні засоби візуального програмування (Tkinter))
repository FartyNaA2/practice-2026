import tkinter as tk
from tkinter import messagebox, filedialog
import requests


class CryptoTrackApp:
    def __init__(self, root):
        self.root = root
        self.root.title("CryptoTrack Pro — Курс криптовалют")
        self.root.geometry("450x450")

        self.last_result = ""

        self.create_menu()
        self.create_widgets()
        self.draw_canvas()

    def create_menu(self):
        main_menu = tk.Menu(self.root)
        self.root.config(menu=main_menu)

        file_menu = tk.Menu(main_menu, tearoff=0)
        file_menu.add_command(label="Зберегти результат...", command=self.save_to_file)
        file_menu.add_separator()
        file_menu.add_command(label="Вихід", command=self.root.quit)
        main_menu.add_cascade(label="Файл", menu=file_menu)

        help_menu = tk.Menu(main_menu, tearoff=0)
        help_menu.add_command(label="Про програму", command=self.show_about)
        main_menu.add_cascade(label="Довідка", menu=help_menu)

    def create_widgets(self):
        main_frame = tk.Frame(self.root, padx=20, pady=20)
        main_frame.pack(fill="x")

        lbl_info = tk.Label(main_frame, text="Введіть ID монети (напр. bitcoin, ethereum):", font=("Arial", 10))
        lbl_info.pack(pady=5)

        self.entry_crypto = tk.Entry(main_frame, font=("Arial", 12), width=25)
        self.entry_crypto.pack(pady=5)

        btn_check = tk.Button(main_frame, text="Отримати курс", bg="#4CAF50", fg="white",
                              font=("Arial", 10, "bold"), command=self.get_price)
        btn_check.pack(pady=10)

        self.lbl_result = tk.Label(main_frame, text="Очікування запиту...", font=("Arial", 14, "bold"), fg="#333")
        self.lbl_result.pack(pady=10)

    def draw_canvas(self):
        self.canvas = tk.Canvas(self.root, width=350, height=120, bg="white", relief="sunken", borderwidth=1)
        self.canvas.pack(pady=10)

        self.canvas.create_line(20, 100, 330, 100, width=2)
        self.canvas.create_line(20, 100, 20, 10, width=2)

        self.canvas.create_text(175, 60, text="Тут буде графік динаміки", fill="gray", font=("Arial", 10, "italic"))

    def get_price(self):
        coin_id = self.entry_crypto.get().strip().lower()

        if not coin_id:
            messagebox.showwarning("Помилка", "Будь ласка, введіть назву криптовалюти!")
            return

        self.lbl_result.config(text="Завантаження...", fg="blue")
        self.root.update()

        url = f"https://api.coingecko.com/api/v3/simple/price?ids={coin_id}&vs_currencies=usd"

        try:
            response = requests.get(url, timeout=5)
            data = response.json()

            if coin_id in data:
                price = data[coin_id]['usd']
                result_text = f"1 {coin_id.upper()} = ${price}"
                self.lbl_result.config(text=result_text, fg="green")
                self.last_result = result_text

                self.update_canvas_visual(active=True)
            else:
                self.lbl_result.config(text="Монету не знайдено", fg="red")
                self.update_canvas_visual(active=False)

        except requests.exceptions.RequestException:
            self.lbl_result.config(text="Помилка з'єднання", fg="red")
            messagebox.showerror("Помилка мережі", "Не вдалося підключитися до API.")

    def update_canvas_visual(self, active):
        self.canvas.delete("graph_line")

        if active:
            points = [20, 100, 80, 80, 140, 90, 200, 50, 260, 60, 330, 20]
            self.canvas.create_line(points, fill="green", width=3, smooth=True, tags="graph_line")
        else:
            self.canvas.create_line(20, 90, 330, 90, fill="red", width=2, dash=(4, 2), tags="graph_line")

    def save_to_file(self):
        if not self.last_result:
            messagebox.showwarning("Увага", "Спочатку отримайте дані для збереження!")
            return

        file_path = filedialog.asksaveasfilename(
            defaultextension=".txt",
            filetypes=[("Text files", "*.txt"), ("All files", "*.*")],
            title="Зберегти результат як"
        )

        if file_path:
            try:
                with open(file_path, "w", encoding="utf-8") as f:
                    f.write(f"--- CryptoTrack Report ---\n")
                    f.write(f"{self.last_result}\n")
                    f.write("Джерело: CoinGecko API")
                messagebox.showinfo("Успіх", "Файл успішно збережено!")
            except Exception as e:
                messagebox.showerror("Помилка", f"Не вдалося записати файл:\n{e}")

    def show_about(self):
        messagebox.showinfo("Про програму", "CryptoTrack Pro v1.0\n\nНавчальний проект.")


if __name__ == "__main__":
    root = tk.Tk()
    app = CryptoTrackApp(root)
    root.mainloop()
